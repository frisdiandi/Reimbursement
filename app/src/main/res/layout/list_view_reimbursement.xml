<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="22dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:text="Jenis Pengeluaran"
                android:id="@+id/textViewJenisPengeluaran"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/View1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textViewJenisPengeluaran"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#448AFF" />

            <TextView
                android:text="Tanggal"
                android:id="@+id/textViewTanggal"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_below="@id/View1"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Biaya"
                android:id="@+id/textViewBiaya"
                android:layout_below="@+id/textViewTanggal"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/View2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textViewBiaya"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#448AFF" />

            <TextView
                android:text="Keterangan"
                android:textSize="20dp"
                android:layout_below="@+id/textViewBiaya"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textViewKeterangan"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <View
                android:id="@+id/View3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textViewKeterangan"
                android:layout_gravity="center"
                android:background="#448AFF" />

            <TextView
                android:text="Status"
                android:id="@+id/textViewStatus"
                android:layout_below="@+id/View3"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>